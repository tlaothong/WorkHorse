<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:DemoSpecFlow_ViewModels="clr-namespace:DemoSpecFlow.ViewModels" x:Class="DemoSpecFlow.MainPage"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

	<UserControl.Resources>
		<DemoSpecFlow_ViewModels:MainPageViewModel x:Key="MainPageViewModelDataSource" d:IsDataSource="True"/>
	</UserControl.Resources>
	<UserControl.DataContext>
		<Binding Source="{StaticResource MainPageViewModelDataSource}"/>
	</UserControl.DataContext>

    <StackPanel x:Name="LayoutRoot" Background="White">
    	<TextBlock TextWrapping="Wrap" Text="Enter your name:"/>
    	<TextBox x:Name="Name" TextWrapping="Wrap" Text="TextBox"/>
    	<Button Content="Submit"/>
    	<TextBlock x:Name="Message" TextWrapping="Wrap" Text="TextBlock"/>
    </StackPanel>
</UserControl>
