<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" x:Class="TheS.Casinova.MLN.MLNUI"
    mc:Ignorable="d"
    d:DesignHeight="400" d:DesignWidth="600">
    
    <Grid x:Name="LayoutRoot" Background="White">

    	<Grid Height="104" VerticalAlignment="Top">
    		<Rectangle Fill="#FFFFB4B4" Stroke="Black"/>
    		<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Current bonus available:" VerticalAlignment="Top" Margin="8,8,0,0" FontWeight="Bold" FontSize="16"/>
    		<TextBlock x:Name="CurrentBunusAvailableTextBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="CurrentBunusAvailableTextBlock" VerticalAlignment="Top" Margin="233,8,0,0" FontSize="16"/>
    		<Button x:Name="DepositButton" Content="Deposit" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,8,8,0" Click="MLNDepositButton_Click" />
    		<sdk:DataGrid x:Name="MLNDataGrid" Margin="8,36,8,7"/>
    	</Grid>
    	<Grid Margin="0,108,0,0">
    		<Rectangle Fill="White" Stroke="Black"/>
    		<Image HorizontalAlignment="Left" Source="/TheS.Casinova.PlayerAccount.Silverlight;component/Assets/Images/mln.png" Stretch="Fill" Width="271" Margin="8,76,0,41"/>
    		<Grid Margin="283,132,9,32">
    			<Rectangle Fill="White" Stroke="Black" RadiusY="16" RadiusX="16" Margin="0"/>
    			<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Level 1:" VerticalAlignment="Top" Margin="8,32,0,0" FontWeight="Bold"/>
    			<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Level 2:" VerticalAlignment="Top" Margin="8,64,0,0" FontWeight="Bold"/>
    			<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Level 3:" VerticalAlignment="Top" Margin="8,96,0,0" FontWeight="Bold"/>
    			<TextBlock x:Name="MLNFirstLevelTextBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="FirstLevelTextBlock" VerticalAlignment="Top" Margin="61,32,0,0"/>
    			<TextBlock x:Name="MLNSecondLevelTextBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="SecondLevelTextBlock" VerticalAlignment="Top" Margin="61,64,0,0"/>
    			<TextBlock x:Name="MLNThirdLevelTextBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="ThirdLevelTextBlock" VerticalAlignment="Top" Margin="61,96,0,0"/>
    			<Button x:Name="FirstViewButton" Content="View" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,29,8,0" Click="FirstViewButton_Click" />
    			<Button x:Name="SecondViewButton" Content="View" HorizontalAlignment="Right" Width="75" Margin="0,61,8,0" VerticalAlignment="Top" Click="SecondViewButton_Click" />
    			<Button x:Name="ThirdViewButton" Content="View" HorizontalAlignment="Right" Width="75" Margin="0,93,8,0" VerticalAlignment="Top" Click="ThirdViewButton_Click" />
    		</Grid>
    	</Grid>

    </Grid>
</UserControl>
