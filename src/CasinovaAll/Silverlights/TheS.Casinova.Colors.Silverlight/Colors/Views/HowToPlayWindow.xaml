<controls:ChildWindow x:Class="TheS.Casinova.Colors.Views.HowToPlayWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="600" Height="400" 
           Title="How to play." FontSize="21.333">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button x:Name="CloseButton" Content="Close" Click="CloseButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" FontSize="11" />
        <Grid>
        	<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Game:" VerticalAlignment="Top" FontSize="13.333" FontWeight="Bold"/>
        	<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Colors" VerticalAlignment="Top" FontSize="13.333" Margin="52,0,0,0"/>
        	<ScrollViewer Margin="0,23,0,0">
        		<TextBlock x:Name="Information" TextWrapping="Wrap" Text="Information" FontSize="11"/>
        	</ScrollViewer>
        </Grid>
    </Grid>
</controls:ChildWindow>