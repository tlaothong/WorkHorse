<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:TheS_Casinova_Colors_ViewModels="clr-namespace:TheS.Casinova.TwoWins.ViewModels"
	mc:Ignorable="d"
	x:Class="TheS.Casinova.GamePlayUI"
	d:DesignWidth="640" d:DesignHeight="480" Width="500" Height="400">

	<UserControl.Resources>
		<TheS_Casinova_Colors_ViewModels:GamePlayPageViewModel x:Key="GamePlayModelDataSource" d:IsDataSource="True"/>
	</UserControl.Resources>
	<UserControl.DataContext>
		<Binding Source="{StaticResource GamePlayModelDataSource}"/>
	</UserControl.DataContext>

	<Grid x:Name="LayoutRoot">
		<Grid Height="40" VerticalAlignment="Top">
			<Rectangle Fill="Black" Stroke="Black"/>
			<TextBlock x:Name="Title" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Title" VerticalAlignment="Center" Margin="8,0,0,0" FontSize="26.667" Foreground="White"/>
		</Grid>
		<Grid Margin="0,40,0,0">
			<TextBlock x:Name="GameTime" TextWrapping="Wrap" Text="GameTime" VerticalAlignment="Top" FontSize="21.333" Margin="8,8,8,0" FontWeight="Bold" TextAlignment="Center"/>
			<Grid Height="70" Margin="150,64,150,0" VerticalAlignment="Top">
				<Rectangle Fill="#FFEBEBEB" RadiusY="4" RadiusX="4" Stroke="Black"/>
				<TextBlock x:Name="Winner" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Winner" FontSize="16" Margin="0,18,0,0" VerticalAlignment="Top"/>
				<TextBlock x:Name="WinnerInformation" TextWrapping="Wrap" Text="WinnerInformation" Margin="0,45,0,0" VerticalAlignment="Top" TextAlignment="Center"/>
			</Grid>
			<Grid HorizontalAlignment="Left" Height="66" Margin="100,194,0,0" VerticalAlignment="Top" Width="147">
				<Button x:Name="BetBlack" Content="Black" Height="46" VerticalAlignment="Top"/>
				<TextBlock x:Name="TotalAmountOfBlack" TextWrapping="Wrap" Text="TotalAmountOfBlack" VerticalAlignment="Bottom" TextAlignment="Center"/>
			</Grid>
			<Grid HorizontalAlignment="Right" Height="66" Margin="0,194,100,0" VerticalAlignment="Top" Width="147">
				<Button x:Name="BetWhite" Content="White" Height="46" VerticalAlignment="Top"/>
				<TextBlock x:Name="TotalAmountOfWhite" TextWrapping="Wrap" Text="TotalAmountOfWhite" VerticalAlignment="Bottom" TextAlignment="Center"/>
			</Grid>
		</Grid>
	</Grid>
</UserControl>